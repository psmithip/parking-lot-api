{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDirs": ["src"],
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}